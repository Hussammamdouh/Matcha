# Environment
NODE_ENV=production
PORT=8080

# Feature Flags
ENABLE_KYC=false
ENABLE_PHONE_AUTH=false
ENABLE_RECAPTCHA=false

# Firebase Configuration
FIREBASE_PROJECT_ID=matcha-staging
GOOGLE_APPLICATION_CREDENTIALS=/var/secrets/google/key.json
# Needed for email/password login via REST API
FIREBASE_WEB_API_KEY=your-firebase-web-api-key

# CORS & Security
ALLOW_ORIGINS=https://staging.matcha.app
CORS_CREDENTIALS=true

# Cloud KMS
KMS_KEY_NAME=projects/your-project/locations/global/keyRings/matcha-keys/cryptoKeys/user-data

# Email Configuration
MAIL_PROVIDER=smtp
# SMTP settings (if MAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@domain.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@matcha.app

# SendGrid settings (if MAIL_PROVIDER=sendgrid)
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@matcha.app



# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Frontend URL
FRONTEND_URL=https://staging.matcha.app

# Logging
LOG_REDACT_KEYS=authorization,password,idToken,refreshToken

# Cloud Tasks (optional; disabled by default)
# CLOUD_TASKS_LOCATION=us-central1
# CLOUD_TASKS_QUEUE=default

# Logging (local)
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TARGET=console
# LOG_FILE_PATH=./logs/app.log

# Testing
TEST_FIREBASE_PROJECT_ID=matcha-test
TEST_GOOGLE_APPLICATION_CREDENTIALS=./test-service-account-key.json
